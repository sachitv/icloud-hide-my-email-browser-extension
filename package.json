{
  "name": "icloud-hide-my-email-plus-browser-extension",
  "version": "1.0.1",
  "description": "Cross-browser extension bringing iCloud's Hide My Email service to more browsers as Hide My Email+.",
  "license": "MIT",
  "author": "Sachit Vithaldas",
  "repository": {
    "type": "git",
    "url": "https://github.com/sachitv/icloud-hide-my-email-browser-extension.git"
  },
  "scripts": {
    "prebuild": "rm -rf build",
    "build": "node utils/build.js",
    "prebuild:firefox": "rm -rf build",
    "build:firefox": "FIREFOX=true node utils/build.js",
    "start": "node utils/webserver.js",
    "start:firefox": "FIREFOX=true node utils/webserver.js",
    "lint": "eslint .",
    "prettier": "prettier --write '**/*.{js,jsx,ts,tsx,json,css,scss,md,eslintrc}'",
    "prettier:check": "prettier --check '**/*.{js,jsx,ts,tsx,json,css,scss,md,eslintrc}'",
    "check:licenses": "node utils/checkLicenses.mjs",
    "report:licenses": "node utils/generateLicenseTable.mjs > ATTRIBUTIONS.md && npx prettier --write ATTRIBUTIONS.md"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^7.1.0",
    "@fortawesome/free-brands-svg-icons": "^7.1.0",
    "@fortawesome/free-solid-svg-icons": "^7.1.0",
    "@fortawesome/react-fontawesome": "^3.1.0",
    "fuse.js": "^7.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "uuid": "^13.0.0",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.14",
    "@types/chrome": "^0.1.19",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@types/webextension-polyfill": "^0.12.4",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "eslint": "^9.36.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^6.1.0",
    "html-loader": "^5.1.0",
    "html-webpack-plugin": "^5.6.4",
    "license-checker-rseidelsohn": "^4.4.2",
    "mini-css-extract-plugin": "^2.9.4",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "prettier": "^3.6.2",
    "sass-embedded": "^1.93.2",
    "sass-loader": "^16.0.5",
    "spdx-expression-parse": "^4.0.0",
    "tailwindcss": "^4.1.14",
    "terser-webpack-plugin": "^5.3.14",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.102.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  }
}
